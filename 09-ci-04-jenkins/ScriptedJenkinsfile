node("linux") {
    def prod_run = false // Установите значение по умолчанию

    stage("Parameters") {
        // Проверяем, передан ли параметр при запуске
        if (params.prod_run) {
            prod_run = params.prod_run.toBoolean()
        }
    }

    stage("Git checkout") {
        git credentialsId: '5ac0095d-0185-431b-94da-09a0ad9b0e2c', url: 'git@github.com:aragastmatb/example-playbook.git'
    }

    stage("Sample define secret_check") {
        secret_check = true
    }

    stage("Run playbook") {
        if (secret_check) {
            if (prod_run) {
                sh 'ansible-playbook site.yml -i inventory/prod.yml'
            } else {
                sh 'ansible-playbook site.yml -i inventory/prod.yml --check --diff'
            }
        } else {
            echo 'need more action'
        }
    }
}
